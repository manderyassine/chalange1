PORT=4000
# Primary Mongo connection string (choose one form and remove the other)
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
# MONGO_URI=mongodb://localhost:27017/mern_multi

# Use a long random value (at least 32+ chars)
JWT_SECRET=change_me_to_a_long_random_secret

OPENWEATHER_API_KEY=your_openweather_api_key

# Comma separated list of allowed origins for CORS
# Example for local + production Netlify:
# CORS_ORIGIN=http://localhost:5173,https://your-site.netlify.app
CORS_ORIGIN=http://localhost:5173

# Set to true in production HTTPS to send SameSite=None; Secure refresh cookie
SECURE_COOKIES=false
